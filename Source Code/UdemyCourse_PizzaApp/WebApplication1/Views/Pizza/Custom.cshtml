@{
}
<h1>Customize your pizza!</h1>

<div class="text-center container">
    <h1>Create your own Pizza!</h1>
    <form asp-controller="Pizza" asp-action="SaveCustomPizza" method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" placeholder="name your pizza ..." asp-for="PizzaName" />
        <br />
        <input type="checkbox" placeholder="Tomato Sauce" asp-for="TomatoSauce" /> Tomato Sauce
        <br />
        <input type="checkbox" placeholder="Cheese" asp-for="Cheese" /> Cheese
        <br />
        <input type="checkbox" placeholder="Pepperoni" asp-for="Pepperoni" /> Pepperoni
        <br />
        <input type="checkbox" placeholder="Pineapple" asp-for="Pineapple" /> Pineapple
        <br />
        <input type="checkbox" placeholder="Tuna" asp-for="Tuna" /> Tuna
        <br />
        <input type="checkbox" placeholder="Mushrooms" asp-for="Mushrooms" /> Mushrooms
        <br />
        <button class="btn btn-primary mt-4" type="submit">Order</button>
    </form>
</div>