@model List<UdemyCourse_FirstApp.Models.StudentsViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Students View";
}

@if(Model.Count() == 0)
{
    <div class="card card-header">
        <h3>There are currently no students in the system!</h3>
    </div>
}
else
{
    @foreach (var student in Model)
    {
        <div class="card mb-3">
            <div class="card-header">@student.StudentId</div>
            <div class="card-body">@student.FirstName @student.Surname</div>
        </div>
    }
}